{
  "name": "git-chimp",
  "version": "0.1.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "pack": "npm pack",
    "release": "npm run release:patch",
    "release:patch": "npm run clean && npm run build && npm version patch && git push && git push --tags && npm publish",
    "release:minor": "npm run clean && npm run build && npm version minor && git push && git push --tags && npm publish",
    "release:major": "npm run clean && npm run build && npm version major && git push && git push --tags && npm publish",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "type": "module",
  "bin": {
    "git-chimp": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "keywords": [],
  "author": "Mark Rabey <mark@markrabey.com> (http://markrabey.com/)",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "chalk": "^5.4.1",
    "dotenv": "^16.5.0",
    "inquirer": "^12.6.3",
    "openai": "^4.103.0",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "commander": "^14.0.0",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
